{
    "openapi": "3.0.0",
    "info": {
        "title": "User API",
        "description": "User API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/users/register" : {
            "post" : {
                "description": "User register",
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name", "username" , "password"
                                ],
                                "properties": {
                                    "username" : {
                                        "type": "string"
                                    },
                                    "password" : {
                                        "type": "string"
                                    },
                                    "name" : {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "piter" : {
                                    "description": "Piter registrasi",
                                    "value": {
                                        "username" : "piter",
                                        "password" : "rahasia",
                                        "name" : "Piter Pangaribuan"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201" : {
                        "description": "Success register",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data" : {
                                            "type": "object",
                                            "properties": {
                                                "id" : {
                                                    "type": "number"
                                                },
                                                "username" : {
                                                    "type": "string"
                                                },
                                                "name" : {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors" : {
                                            "type": "object"
                                        }
                                    }
                                },
                                "examples": {
                                    "success" : {
                                        "description": "Success register user",
                                        "value": {
                                            "id" : 1,
                                            "username" : "Piter Pangaribuan",
                                            "name" : "piter"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400" : {
                        "description": "Validation error",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors" : {
                                            "type": "object",
                                            "properties": {
                                                "username" : {
                                                    "type": "array"
                                                },
                                                "name" : {
                                                    "type": "array"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "validation-error" : {
                                        "description": "Validation error example",
                                        "value": {
                                            "errors" : {
                                                "username" : [
                                                    "username must not be blank",
                                                    "username min 6 character"
                                                ],
                                                "password" : [
                                                    "password must not be blank",
                                                    "password min 6 character"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login" : {
            "post" : {
                "description": "Login user",
                "requestBody": {
                    "description": "Login user",
                    "content": {
                        "application/json" : {
                            "schema": {
                                "type": "object",
                                "required": ["username, password"],
                                "properties": {
                                    "username" : {
                                        "type": "string"
                                    },
                                    "password" : {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data" : {
                                            "type": "object",
                                            "properties": {
                                                "username" : {
                                                    "type": "string"
                                                },
                                                "name" : {
                                                    "type": "string"
                                                },
                                                "token" : {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors" : {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400" : {
                        "description": "Validation error",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors" : {
                                            "type": "object",
                                            "properties": {
                                                "username" : {
                                                    "type": "array"
                                                },
                                                "name" : {
                                                    "type": "array"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "validation-error" : {
                                        "description": "Validation error example",
                                        "value": {
                                            "errors" : {
                                                "username" : [
                                                    "username must not be blank",
                                                    "username min 6 character"
                                                ],
                                                "password" : [
                                                    "password must not be blank",
                                                    "password min 6 character"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/current" : {
            "get": {
                "description": "Get user current",
                "parameters": [{
                    "name" : "Authorization",
                    "in": "header"
                }],
                "responses": {
                    "200" : {
                        "description": "Success get user current",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data" : {
                                            "type": "object",
                                            "properties": {
                                                "id" : {
                                                    "type": "number"
                                                },
                                                "username" : {
                                                    "type": "string"
                                                },
                                                "name" : {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors" : {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "description": "Update user current",
                "parameters": [{
                    "name" : "Authorization",
                    "in" : "header"
                }],
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name" : {
                                        "type": "string"
                                    },
                                    "password" : {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success update user current",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data" : {
                                            "type": "object",
                                            "properties": {
                                                "id" : {
                                                    "type": "number"
                                                },
                                                "name" : {
                                                    "type": "string"
                                                },
                                                "password" : {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors" : {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/logout" : {
            "delete": {
                "description": "Logout user current",
                "parameters": [{
                    "name" : "Authorization",
                    "in" : "header"
                }],
                "responses": {
                    "200" : {
                        "description": "Success logout",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data" : {
                                            "type": "boolean"
                                        },
                                        "errors" : {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
